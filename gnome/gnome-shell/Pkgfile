makedepends=(systemd meson sassc caribou evolution-data-server gjs gnome-control-center gnome-themes-extra libcroco mutter startup-notification gnome-bluetooth gstreamer-plugins-base network-manager-applet gtk-doc adwaita-icon-theme dconf gnome-backgrounds gnome-menus telepathy-mission-control gnome-settings-daemon gdm)

description="provides the core user interface functions for the GNOME 3 Desktop"
url="http://www.gnome.org/"
packager="Yaolinux Team"
maintainer="rems"
run=(adwaita-icon-theme dconf gnome-backgrounds gnome-menus telepathy-mission-control gtk-update-icon-cache gnome-settings-daemon gdm)

name=gnome-shell
version=3.30.2
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd build
meson --prefix=/usr
ninja
DESTDIR=$PKG ninja install
}
