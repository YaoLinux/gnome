# Depends on: autoconf git accountsservice clutter-gtk colord-gtk gnome-online-accounts gnome-settings-daemon grilo libgtop libpwquality kerberos shared-mime-info cheese cups samba gnome-bluetooth ibus modemmanager network-manager-applet gnome-color-manager sound-theme-freedesktop cups-pk-helper vino gsettings-desktop-schemas wayland gdk-pixbuf

description="The Control Center for GNOME"
url="http://www.gnome.org/"
packager="remy <remy@nutyx.org>"
contributors="Fanch, Tnut, jayce"
run=(iso-codes gsettings-desktop-schemas)

name=gnome-control-center
version=3.24.2
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/${name}/${version%.*}/${name}-$version.tar.xz
        gnome-control-center-3.24.2-fix-without-gdkwayland.patch)
build() {
cd $name-$version
patch -Np1 -i ../gnome-control-center-3.24.2-fix-without-gdkwayland.patch
./configure --prefix=/usr --sysconfdir=/etc \
            --disable-static
make
make DESTDIR=$PKG install
}
						
