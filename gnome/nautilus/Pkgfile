# Depends on: gnome-autoar libnotify gnome-desktop shared-mime-info gobject-introspection exempi libexif gvfs gtk-update-icon-cache desktop-file-utils libselinux desktop-file-utils meson

description="GNOME file manager"
url="http://live.gnome.org/Nautilus"
packager="jayce <jayce.net@gmail.com>"
contributors="Fanch, Tnut"
run=(desktop-file-utils gtk-update-icon-cache)

name=nautilus
version=3.24.2
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
  mkdir -p build
  meson build --prefix=/usr  \
    --sysconfdir=/etc \
    -Denable-packagekit=false \
    -Denable-exif=true \
    -Denable-xmp=true \
    -Denable-gtk-doc=true \
    -Denable-selinux=false\
    -Denable-tracker=false
  cd build
  ninja
  DESTDIR=$PKG ninja install
}
