# Depends on: gnome-autoar libnotify gnome-desktop tracker shared-mime-info gobject-introspection exempi libexif gvfs gtk-update-icon-cache desktop-file-utils libselinux desktop-file-utils meson gtk-doc

description="GNOME file manager"
url="http://live.gnome.org/Nautilus"
packager="remy <remy@nutyx.org>"
contributors="Fanch, Tnut, jayce"
run=(desktop-file-utils gtk-update-icon-cache)

name=nautilus
version=3.26.2
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
  mkdir -p build
  cd build
  meson --prefix=/usr  \
    --sysconfdir=/etc \
    -Denable-packagekit=false \
    -Denable-exif=true \
    -Denable-xmp=true \
    -Denable-gtk-doc=true \
    -Denable-selinux=false
  ninja
  DESTDIR=$PKG ninja install
}
