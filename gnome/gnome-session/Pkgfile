# Depends on: dbus-glib gnome-desktop json-glib mesa upower gconf xmlto libxslt docbook-xml docbook-xsl

description="start up the GNOME Desktop environment"
url="http://www.gnome.org/"
packager="remy <remy@nutyx.org>"
contributors="Fanch, Tnut"
run=()

name=gnome-session
version=3.26.1
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
sed 's@/bin/sh@/bin/sh -l@' -i gnome-session/gnome-session.in
./configure --prefix=/usr --docdir=/usr/share/doc/gnome-session-3.26.1
make
make DESTDIR=$PKG install
}
