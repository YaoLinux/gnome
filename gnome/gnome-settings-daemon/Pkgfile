# Depends on: geoclue2 geocode-glib libgweather librsvg networkmanager nss intltool cups colord gnome-desktop libcanberra libnotify libgnomekbd libwacom pulseaudio upower gsettings-desktop-schemas gtk-update-icon-cache

description="The GNOME Settings daemon"
url="http://www.gnome.org/"
packager="remy <remy@nutyx.org>"
contributors="Fanch, Tnut, jayce"
run=(gtk-update-icon-cache gsettings-desktop-schemas)

name=gnome-settings-daemon
version=3.26.2
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)
build() {
cd $name-$version
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --disable-wayland \
            --disable-static
make
make udevrulesdir=/lib/udev/rules.d DESTDIR=$PKG install
}
