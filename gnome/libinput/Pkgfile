# Depends on: libevdev mtdev libwacom gtk3 check libunwind

description="Library for display servers and other applications that need to deal with input devices"
url="http://www.freedesktop.org/wiki/Software/libinput/"
packager="jayce <jayce.net@gmail.com>"
contributors="Tnut, Pierre B"

name=libinput
version=1.8.3

source=(http://freedesktop.org/software/$name/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr    \
            --disable-static \
	    --disable-documentation \
            --with-udev-dir=/lib/udev
make
make DESTDIR=$PKG install
}
uptodate() {
local url ext
ext=".tar.xz"
url="https://freedesktop.org/software/libinput/"
lynx -dump -listonly --nonumbers $url/?C=M\;O=A|\
grep $ext$|tail -1|sed s@$url/$name-@@|sed s@$ext@@
}
