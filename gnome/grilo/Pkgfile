# Depends on: gnome-common glib libxml2 gobject-introspection gtk3 liboauth libsoup totem-pl-parser vala

description="Framework focused on making media discovery and browsing easy for application developers."
url="http://www.gnome.org/"
packager="fanch <fanch@nutyx.org>"
contributors="fanch at nutyx dot org, tnut at nutyx dot org"
name=grilo
version=0.3.4
release=2

source=()

build() {
git clone https://github.com/GNOME/grilo.git grilo
cd $name
./autogen.sh
make
make DESTDIR=$PKG install
}
