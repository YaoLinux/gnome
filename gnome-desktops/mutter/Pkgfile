makedepends=(glib json-glib libinput xorg-libsm gnome-desktop gnome-settings-daemon libwacom libxkbcommon upower zenity gobject-introspection libcanberra startup-notification pipewire xorg-libxcursor xorg-libxcomposite wayland)

description="Window manager for gnome."
url="http://www.gnome.org/"

packager="Yaolinux Team"
maintainer="rems"

name=mutter
version=3.38.2
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

set=(gnome3)

build() {

mkdir build && cd build

meson --prefix=/usr \
      -Degl_device=true \
      -Dprofiler=false \
      -Dinstalled_tests=false \
      ../$name-$version

ninja
DESTDIR=$PKG ninja install
}
