makedepends=(gdk-pixbuf json-glib libarchive libsoup meson ninja pango gcab gobject-introspection gtk3 yaml)

description="Library to read and write AppStream metadata"
url="http://people.freedesktop.org/~hughsient/appstream-glib/"
packager="Yaolinux Team"
 
packager="Yaolinux Team"
maintainer="rems"

name=appstream-glib
version=0.7.18

source=(http://people.freedesktop.org/~hughsient/$name/releases/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd build
meson --prefix=/usr -Dgtk-doc=false -Drpm=false -Dstemmer=false
ninja
DESTDIR=$PKG ninja install
}
