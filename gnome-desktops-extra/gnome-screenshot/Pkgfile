makedepends=(meson ninja gtk3 libcanberra gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

description="Take pictures of your screen"
url="http://www.gnome.org/"
packager="Yaolinux Team"
maintainer="rems"
run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=gnome-screenshot
version=3.38.0

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir -p build
cd build
meson --prefix=/usr ..
sed '/^build all/s@src/org.gnome.Screenshot.metainfo.xml@@' \
    -i build.ninja
cp ../src/org.gnome.Screenshot.metainfo.xml.in \
          src/org.gnome.Screenshot.metainfo.xml

ninja
DESTDIR=$PKG ninja install
}          
