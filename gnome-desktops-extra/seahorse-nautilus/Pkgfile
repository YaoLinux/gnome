makedepends=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache  gtk3 libcryptui dbus-glib gnome-keyring gconf gnupg gpgme nautilus libnotify seahorse)

description="PGP encryption and signing for nautilus"
url="http://www.gnome.org/"
packager="Yaolinux Team"
maintainer="rems"
run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=seahorse-nautilus
version=3.11.92
release=3

source=(http://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {

find / -iname *.la -print -delete

	cd $name-$version

	sed -i "s@1.2 1.4 2.0@1.2 1.4 2.0 2.1 2.2@" configure

	 ./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
