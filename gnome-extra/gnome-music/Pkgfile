# Depends on: gsettings-desktop-schemas desktop-file-utils python-gobject python3-gobject gtk-update-icon-cache gobject-introspection grilo gtk3 intltool itstool libmediaart python python3 tracker

description="Music player and management application."
url="http://www.gnome.org/"
packager="thierryn1 at hispeed dot ch"
run=(intltool itstool python gobject-introspection gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=gnome-music
version=3.22.2
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)
 
build() {
cd $name-$version
./configure --prefix=/usr --disable-schemas-compile
make
make DESTDIR=$PKG install
}
