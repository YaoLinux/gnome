# Depends on: meson ninja gsettings-desktop-schemas desktop-file-utils python-gobject gtk-update-icon-cache gobject-introspection grilo gtk3 intltool itstool libmediaart python python2 tracker

description="Music player and management application"
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Tnut, Fanch, Remy"
run=(intltool itstool python gobject-introspection gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=gnome-music
version=3.28.1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)
 
build() {
cd $name-$version
mkdir build
cd build
meson --prefix=/usr 
ninja     
DESTDIR=$PKG ninja install
}
