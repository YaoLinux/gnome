makedepends=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache dconf gconf gtk3 gnome-doc-utils gsettings-desktop-schemas vte3 nautilus )

description="The GNOME Terminal Emulator"
url="http://www.gnome.org/"

packager="Yaolinux Team"
maintainer="rems"

run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=gnome-terminal
version=3.36.1.1

source=(ftp://ftp.gnome.org/pub/gnome/sources/gnome-terminal/${version%.*.*}/gnome-terminal-$version.tar.xz)

build() {
find / -name *.la -print -delete

cd $name-$version
./configure --prefix=/usr             \
            --disable-static          \
            --disable-migration       \
            --disable-search-provider \
            --without-pcre2 --with-nautilus-extension
make
make DESTDIR=$PKG install
}
