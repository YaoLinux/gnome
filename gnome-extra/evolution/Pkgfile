# Depends on: gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache adwaita-icon-theme evolution-data-server gnome-desktop gnome-icon-theme highlight shared-mime-info  gstreamer libcanberra libgweather libcryptui gtkspell gtkhtml highlight itstool libgdata shared-mime-info libnotify clutter-gtk geoclue geocode-glib libchamplain gtk-doc openldap gtksourceview gtkspell openldap

description="Manage your email, contacts and schedule."
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Jayce"

run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=evolution
version=3.24.5
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DSYSCONF_INSTALL_DIR=/etc  \
      -DENABLE_INSTALLED_TESTS=ON \
      -DENABLE_PST_IMPORT=OFF     \
      -DENABLE_GTKSPELL=OFF       \
      -DENABLE_GTK_DOC=ON         \
      -DENABLE_YTNEF=OFF	  \
      -DENABLE_AUTOAR=OFF
make
make DESTDIR=$PKG install
}
