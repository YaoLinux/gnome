# Depends on: gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache adwaita-icon-theme evolution-data-server gnome-desktop gnome-icon-theme highlight shared-mime-info  gstreamer libcanberra libgweather libcryptui gtkspell gtkhtml highlight itstool libpst libgdata shared-mime-info webkitgtk3 libnotify clutter-gtk geoclue geocode-glib libchamplain gtk-doc openldap gtksourceview gtkspell openldap

description="Manage your email, contacts and schedule."
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Jayce"

run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=evolution
version=3.24.5
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
sed -i "/was moved/s/^/#/" ltmain.sh
./configure --prefix=/usr         \
            --sysconfdir=/etc     \
            --disable-gtkspell    \
            --disable-pst-import  \
            --disable-spamassassin \
            --with-openldap  \
            --enable-gtk-doc  \
            --disable-autoar
make
make DESTDIR=$PKG install
}
