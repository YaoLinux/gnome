makedepends=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache enchant gtk3  gtksourceview4 gvfs libpeas yelp-xsl enchant iso-codes libsoup libzeitgeist python-gobject gspell)

description="A text editor for GNOME"
url="http://www.gnome.org/"

packager="Yaolinux Team"
maintainer="rems"

run=(gsettings-desktop-schemas desktop-file-utils gtk-update-icon-cache)

name=gedit
version=3.34.1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {

mkdir build && cd build

meson --prefix=/usr \
      -Ddocumentation=true \
      ../$name-$version
      
ninja
DESTDIR=$PKG ninja install
}
