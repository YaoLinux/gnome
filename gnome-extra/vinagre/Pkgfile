makedepends=(git gnome-common yelp yelp-tools yelp-xsl docbook-xsl vte3 gnutls itstool gtk-vnc itstool libsecret telepathy-glib vala vte avahi appstream-glib freerdp )

description="Remote desktop client for Gnome"
url="https://gnome.org"
maintainer="rems"
packager="Yaolinux Team"
 
name=vinagre
version=git-4c0ad5df


source=(freerdp2017.diff)

prepare () {

git clone https://git.gnome.org/browse/vinagre

cd $name

patch -Np1 -i ../freerdp2017.diff                                                                                                                                           

NOCONFIGURE=1 ./autogen.sh
}

build() {

cd $name

./configure --prefix=/usr \
            --enable-compile-warnings=minimum \
            --enable-rdp
  make
  
  make DESTDIR=$PKG install
}
